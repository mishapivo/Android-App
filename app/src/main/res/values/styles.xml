<resources>

    <!--parent theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/toolbarColor</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:colorBackground">@color/activityColor</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="FullScreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="ActivityTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btnStyleGetStarted" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_bg_fill_selection</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/value_10dp</item>
        <item name="android:textColor">@color/get_started_btn_text_color</item>
        <item name="android:textSize">@dimen/value_16sp</item>
    </style>


    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/footer_btn_color</item>
    </style>

    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/value_40dp</item>
        <item name="atg_isAppendMode">false</item>
        <!--<item name="atg_inputHint">@string/add_tag</item>-->
        <item name="atg_borderColor">#FFFFFF</item>
        <item name="atg_textColor">#FFFFFF</item>
        <item name="atg_backgroundColor">@android:color/transparent</item>
        <item name="atg_dashBorderColor">#60FFFFFF</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_checkedBorderColor">#49C120</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#49C120</item>
        <item name="atg_pressedBackgroundColor">#60FFFFFF</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">13sp</item>
        <item name="atg_horizontalSpacing">6dp</item>
        <item name="atg_verticalSpacing">4dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">3dp</item>
    </style>

    <style name="TagGroup.Large" parent="TagGroup">
        <item name="atg_borderStrokeWidth">0.7dp</item>
        <item name="atg_textSize">15sp</item>
        <item name="atg_horizontalSpacing">12dp</item>
        <item name="atg_verticalSpacing">7dp</item>
        <item name="atg_horizontalPadding">15dp</item>
        <item name="atg_verticalPadding">7dp</item>
    </style>

    <style name="TagGroup.Small" parent="TagGroup">
        <item name="android:layout_height">@dimen/value_30dp</item>
        <item name="android:layout_marginBottom">@dimen/value_3dp</item>
        <item name="atg_borderStrokeWidth">0.7dp</item>
        <item name="atg_textSize">13sp</item>
        <item name="atg_horizontalSpacing">10dp</item>
        <item name="atg_verticalSpacing">3dp</item>
        <item name="atg_horizontalPadding">10dp</item>
        <item name="atg_verticalPadding">5dp</item>
        <item name="atg_textColor">@color/client_tag_color</item>
        <item name="atg_borderColor">@color/client_tag_border_color</item>
        <item name="atg_pressedBackgroundColor">@color/client_tag_pressed_color</item>
    </style>

    <style name="TagGroup.Small.Multiline" parent="TagGroup">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/value_3dp</item>
        <item name="atg_borderStrokeWidth">0.7dp</item>
        <item name="atg_textSize">13sp</item>
        <item name="atg_horizontalSpacing">10dp</item>
        <item name="atg_verticalSpacing">3dp</item>
        <item name="atg_horizontalPadding">10dp</item>
        <item name="atg_verticalPadding">5dp</item>
        <item name="atg_textColor">@color/client_tag_color</item>
        <item name="atg_borderColor">@color/client_tag_border_color</item>
        <item name="atg_pressedBackgroundColor">@color/client_tag_pressed_color</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@color/fab_background_color</item>
        <item name="android:textColor">@color/fab_text_color</item>
    </style>


    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

</resources>
