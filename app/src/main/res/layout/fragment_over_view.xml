<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.audacityit.audacity.fragments.PortfolioFragment">
    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adMob"
        android:fitsSystemWindows="true"
        tools:context="com.audacityit.audacity.fragments.OverViewFragment">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_container"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_behavior="com.audacityit.audacity.util.FlingBehavior"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:expandedTitleTextAppearance="@style/TransparentText"
                app:contentScrim="@color/toolbarColor">

                <RelativeLayout
                    android:id="@+id/parallaxView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:id="@+id/centerContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/companyLogoImgView"
                            android:layout_width="@dimen/overview_logo_width"
                            android:layout_height="@dimen/overview_logo_height"
                            android:layout_gravity="center_horizontal"
                            tools:src="@drawable/ic_overview_company"
                            android:layout_marginBottom="@dimen/value_7dp"
                            app:border_color="@color/transparent_white_2"
                            app:border_width="2px" />

                        <TextView
                            android:id="@+id/companyNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Audacity IT Solutions Ltd."
                            android:textSize="@dimen/value_20sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:id="@+id/companyTagTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Best App Developer in Bangladesh"
                            android:textSize="@dimen/value_13sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/value_5dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_above="@+id/counterView"
                        android:background="@color/transparent_white_2" />

                    <LinearLayout
                        android:id="@+id/counterView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent_white">

                        <TextView
                            android:id="@+id/projectCompleteTv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:text="365 \nCompleted"
                            android:textSize="@dimen/value_18sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/projectQueueTv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:text="30 \nIn Queue"
                            android:textSize="@dimen/value_18sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/projectWaitingTv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:text="25 \nWaiting"
                            android:textSize="@dimen/value_18sp"
                            android:gravity="center" />
                    </LinearLayout>

                </RelativeLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarOverview"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetLeft="0dp"
                    android:background="@android:color/transparent"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:layout_collapseMode="pin" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/overviewRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/layout_overview_item"
            android:layout_marginLeft="@dimen/value_15dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </android.support.design.widget.CoordinatorLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adMob"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/toolbarColor"
        ads:adUnitId="@string/admob_unit_id"
        ads:adSize="BANNER"/>
</RelativeLayout>