<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/value_2dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/portfolioImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/portfolio_image_view_height"
        tools:src="@drawable/img_nav_header"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/value_15dp"
        android:paddingRight="@dimen/value_15dp"
        android:paddingTop="@dimen/value_5dp"
        android:paddingBottom="@dimen/value_5dp"
        android:background="@color/portfolio_footer_color"
        android:layout_gravity="bottom">

        <!--ImageView
            android:id="@+id/likeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_heart_outline_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/value_5dp"
            android:layout_marginRight="@dimen/value_5dp" /-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/headingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Profile App"
                android:textColor="@color/portfolio_header_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/value_15sp" />

            <TextView
                android:id="@+id/tagTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android, UI/UX, iOS"
                android:textColor="@color/portfolio_tag_text_color"
                android:textSize="@dimen/value_14sp"
                android:layout_below="@+id/headingTv"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>